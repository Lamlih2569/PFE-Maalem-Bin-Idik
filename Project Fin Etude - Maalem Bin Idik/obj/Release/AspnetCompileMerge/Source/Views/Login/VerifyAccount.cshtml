@model Project_Fin_Etude___Maalem_Bin_Idik.Models.Verification

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/VerificationAccount_Content/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Vérification de compte | Maalem Bin Idik</title>
</head>
<body>
    @if (Session["CodeStatu"] != null)
    {
    <div class="alert alert-warning" role="alert" id="my-alert" style="position: absolute;top: 0;">
        <b>Code de vérification incorrect! </b>Veuillez réessayer.
    </div>
    }
    <div class="content-container">
        <div class="container">
            @using (Html.BeginForm("VerifyAccount", "Login", FormMethod.Post))
            {
                <div class="header">
                    <img src="~/Content/VerificationAccount_Content/img/lm3lam black.svg" alt="">
                    <h4>Vérification d'addresse electronique</h4>
                </div>
                <div class="body">
                    <div class="mb-3">
                        <label class="form-label">Veuillez vérifier votre boite electronique et entrer le code de vérification :</label>
                        <input type="text" class="form-control" name="Verification_code" required>
                    </div>
                </div>
                <div class="footer">
                    <button type="submit" class="btn btn-warning">Vérifier</button>
                    <span>
                        <a href="/Login/VerificationCodeSender">Si le code n'est pas reçu, veuillez clicker ici.</a>
                    </span>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>