@model List<Project_Fin_Etude___Maalem_Bin_Idik.Models.SERVICE>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Services_Content/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Services_Content/images/lm3lam black.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>Maalem Bin Idik | Liste des services</title>
</head>
<body>
    <nav>
        <div class="container nav-content">
            <div class="logo">
                <a href="@Url.Action("Index","Home")">
                    <img src="~/Content/Services_Content/images/lm3alam wha.svg" alt="">
                </a>   
            </div>
            <h4>Maalem Bin Idik | Page des services</h4>
        </div>
    </nav>
    <div class="filter">
        <div class="container text-center">
            <h3>Filtrer les services</h3>
            @using (Html.BeginForm("ToutServices", "Service", FormMethod.Post))
            {
                <div class="row g-2">
                    <div class="col-md-5">
                        <select class="form-select" aria-label="Default select example" name="ville">
                            <option selected>-- Choisissez une ville --</option>
                            <option>Casablanca</option>
                            <option>Fés</option>
                            <option>Tanger</option>
                            <option>Marrakech</option>
                            <option>Salé</option>
                            <option>Meknès</option>
                            <option>Rabat</option>
                            <option>Oujda</option>
                            <option>Kénitra</option>
                            <option>Agadir</option>
                            <option>Tétouan</option>
                            <option>Témara</option>
                            <option>Safi</option>
                            <option>Mohammédia</option>
                            <option>Khouribga</option>
                            <option>El Jadida</option>
                            <option>Béni Mellal</option>
                            <option>Nador</option>
                            <option>Taza</option>
                            <option>Khémisset</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <select class="form-select" aria-label="Default select example" name="metier">
                            <option selected>-- Choisissez un metier --</option>
                            <option>Plombier</option>
                            <option>Menuisier</option>
                            <option>Electricien</option>
                            <option>Constructeur</option>
                            <option>Peintre</option>
                            <option>Forgeron</option>
                            <option>Tapicier</option>
                            <option>Platrier</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" style="width: 100%;" class="btn btn-primary mb-3">Appliquer le filtre</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="container content">
        @if (Model.Count == 0)
        {
            <div class="text-center">
                <h4 style="font-weight:800">Aucun services trouvé.</h4>
            </div>
        }
        else
        {
            <div class="row g-2">
                @foreach (var service in Model)
                {
                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                        <div class="card" style="width: 18rem;">
                            <img src="~/Content/Services_Content/images/lm3lam black.svg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@service.Titre_service</h5>
                                <p class="card-text">@service.Description_service</p>
                                <a href="@Url.Action("DetailService", "Service", new { id = service.ID_service })" class="btn btn-primary">Plus de detaille</a>
                            </div>
                        </div>
                    </div>
                                    }
            </div>
            }

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
</body>
</html>