@model Project_Fin_Etude___Maalem_Bin_Idik.Models.Authentification
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS File -->
    <link href="~/Content/Login_Content/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Images/lm3lam black.svg">
    <!-- Font Awsome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>Se Connecter | Maalem Bin Idik</title>
</head>
<body>
    <section>
        <div id="login-container" class="row" style="margin-left:0px">
            @Html.Partial("~/Views/Shared/_InfoError.cshtml")
            <div id="left" class="col-md-7">
                <div class="shadow"></div>
                <div class="container left-content">
                    <h2>Bienvenue A Maalem Bin Idik !</h2>
                    <p>Veuillez entrer vos informations correctes afin que vous puissiez se connecter, si vous n'avez pas un compte , veuillez clicker sur le button au dessous</p>
                    <a href="@Url.Action("Register","Login")">Créer un compte</a>
                </div>
            </div>
            <div id="right" class="col-md-5">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="form-header">
                        <div>
                            <img src="~/Content/Login_Content/Login_Images/lm3lam black.svg" alt="">
                        </div>
                        <div>
                            <h3>Se connecter</h3>
                        </div>
                    </div>
                    <div class="row input-login">
                        @Html.TextBoxFor(model => model.Email, new { @required = "required", autocomplete = "off" })
                        <label for="username" class="label-name">
                            <span class="content-name">Addresse Electronique :</span>
                        </label>
                    </div>
                    <div class="row input-login">
                        @Html.PasswordFor(model => model.Password, new { @required = "required", autocomplete = "off" })
                        <label for="password" class="label-name">
                            <span class="content-name">Mot de passe :</span>
                        </label>
                    </div>
                    <div class="d-flex justify-content-center">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Se Connecter">
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>
