@model Project_Fin_Etude___Maalem_Bin_Idik.Models.Registration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Content/Register_Content/img/lm3lam black.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/Content/Register_Content/style.css" rel="stylesheet" />

    <title>Crée Un Nouveau Compte | Maalem Bin Idik</title>
</head>
<body>
    <div class="container row">
        @if (Session["Statu"] != null)
        {
            if (Session["Statu"].ToString() == "Exist")
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-bottom:0px">
                    <strong>Creation Annulée !</strong> Adress electronique deja utilisée.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-bottom:0px">
                    <strong>Creation Annulée !</strong> Veuillez revérifier les informations saisie.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }
        <div class="left col-md-5">
            <div class="left-header">
                <img src="~/Content/Register_Content/img/lm3alam wha.svg" alt="">
                <div class="line"></div>
                <h4>Creation de compte</h4>
            </div>
            <div class="left-content text-center">
                <p>
                    Bienvenue a Maalem Bin Idik, Créer votre compte et rejoignez les autres !
                    si vous avez déja un compte veuillez clicker sur le boutton si dessous
                </p>
                <a href="@Url.Action("Index","Login")">J'ai déja un compte</a>
            </div>
        </div>
        <div class="right col-md-7">
            @using (Html.BeginForm("Register", "Login", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-6">
                        <label for="Nom" class="form-label">Nom :</label>
                        <input type="text" class="form-control" id="Nom" name="Nom_utilisateur" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Prenom" class="form-label">Prenom :</label>
                        <input type="text" class="form-control" id="Prenom" name="Prenom_utilisateur" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="DateNaissance" class="form-label">Date de naissance :</label>
                        <input type="date" class="form-control" id="DateNaissance" name="DateN_utilisateur" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Genre" class="form-label">Genre :</label>
                        <select class="form-select" aria-label="Default select example" name="Genre_utilisateur">
                            <option value="Homme" selected>Homme</option>
                            <option value="Femme">Femme</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="Tel" class="form-label">Telephone :</label>
                        <input type="tel" class="form-control" id="Tel" name="Tele_utilisateur" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Email" class="form-label">Addresse Electronique :</label>
                        <input type="email" class="form-control" id="Email" name="Email_utilisateur" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="Password1" class="form-label">Mot de passe :</label>
                        <input type="password" class="form-control" id="Password1" name="Mdp_utilisateur" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Type" class="form-label">Type De Compte :</label>
                        <select class="form-select" aria-label="Default select example" name="type_utilisateur">
                            <option value="utilisateur" selected>Utilisateur</option>
                            <option value="artisan">Artisan</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Html.AntiForgeryToken()
                        <button type="submit" style="padding: 10px 20px;margin-top: 20px;border: 0px;background: black;color: white;">Créer le Compte</button>
                    </div>
                    <div class="col-md-6"></div>
                </div>
            }
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script></script>
</body>
</html>